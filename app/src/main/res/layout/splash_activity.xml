<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundedimageview="http://schemas.android.com/tools"
    android:background="@drawable/bg_loading_launcher"
    android:id="@+id/rl"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/company_name"
        android:textSize="18sp" />







    <cn.sgr.zmr.com.sgr.View.RoundImageView

        android:id="@+id/iv_center"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:border_thickness="0.5dp"

        app:border_outside_color="@color/white_s"

        android:src="@drawable/ic_launcher"
        android:text="Hello World!" />




   />







</RelativeLayout>