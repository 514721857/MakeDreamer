<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/gray_select"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        >


    <ImageView
        android:id="@+id/user_iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_avatar" />

    <TextView

        android:id="@+id/user_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"

        android:text="@string/nick_name"
        android:layout_marginLeft="12dp"

        android:layout_toRightOf="@id/user_iv_head"
        android:textColor="@color/them_text"
        android:textSize="18sp" />






    <TextView
        android:id="@+id/user_tv_del"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"

        android:layout_marginLeft="@+id/babay_tv_device"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/del"
        android:textColor="@color/them_bg" />
        </RelativeLayout>



</RelativeLayout>
