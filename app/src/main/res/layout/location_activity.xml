<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/lin_top"
        android:orientation="horizontal"
        android:background="@color/them_bg"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:background="@drawable/green_select"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/top_view_left_text"
            android:background="@drawable/green_select"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            />
    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:layout_below="@+id/lin_top"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.baidu.mapapi.map.MapView>

    <LinearLayout
        android:id="@+id/bottom_lin"
        android:orientation="horizontal"
        android:background="@color/bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/nearby_baby"
            android:layout_weight="1.0"
            android:background="@drawable/green_select"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:singleLine="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/them_text"
            android:textSize="16dp"
            android:text="@string/baby_location"/>
        <View
            android:layout_width="0.2dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />
        <TextView
            android:id="@+id/nearby_store"
            android:layout_weight="1.0"
            android:background="@drawable/green_select"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:singleLine="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/them_text"
            android:textSize="16dp"
            android:text="@string/nearby_store"   />

        <View
            android:layout_width="0.2dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/nearby_medice"
            android:layout_weight="1.0"
            android:text="@string/nearby_medice"
            android:background="@drawable/green_select"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:singleLine="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/them_text"
            android:textSize="16dp"
            />
        </LinearLayout>>
    <ImageView
        android:layout_above="@+id/bottom_lin"
        android:id="@+id/relocation"
        android:src="@drawable/ic_track_explore_loc_content"
        android:background="@color/withe"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
