<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/device_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>



<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"

    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"

    >

    <RelativeLayout
        android:id="@+id/item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shot_item_background"
        android:paddingTop="@dimen/margin_8dp"
        android:paddingBottom="@dimen/margin_8dp">
        <cn.sgr.zmr.com.sgr.View.RoundImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile"
            android:layout_height="@dimen/profile"
            android:layout_marginLeft="@dimen/margin_8dp"

            app:border_thickness="0.5dp"
            app:border_outside_color="@color/white_s"/>

        <TextView
            android:id="@+id/newsTitle"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingRight="@dimen/margin_8dp"
            android:singleLine="true"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
        />
        <TextView
             android:id="@+id/author"
             android:layout_below="@+id/newsTitle"
             android:layout_toRightOf="@+id/profile_image"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/margin_8dp"
             android:text="张佳玮"
             android:textColor="@color/secondary_text"
             android:textSize="15sp"
        />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/newsNum"
            android:layout_below="@+id/newsTitle"
           android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0个回答"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="13sp"
            />
        <View
            android:id="@+id/divier_line"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_below="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"/>
        <ImageView
            android:id="@+id/newsImage"
            android:layout_below="@+id/divier_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_height"
            android:visibility="gone"
            android:scaleType="fitXY"
            />
        <View
            android:id="@+id/divier_line2"
            android:layout_below="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/description"
            android:layout_below="@+id/divier_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_8dp"
            android:paddingLeft="@dimen/margin_8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            />

        <TextView
            android:paddingLeft="@dimen/margin_8dp"
            android:id="@+id/newsTime"
            android:layout_below="@+id/description"
            android:text="shijain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/them_text"
            android:textSize="13sp"
            />


    </RelativeLayout>
    </android.support.v7.widget.CardView>>
</LinearLayout>